@model IEnumerable<Project2.Models.Missions>

@{
    ViewBag.Title = "SelectMission";
}

<h2>Select a Mission</h2>
<hr />
<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        Select a Mission
        <span class="caret"></span>
    </button> 
    <ul class="dropdown-menu">

    @foreach (var item in Model) {
 
        <li><a class="dropdown-item" href="@Url.Action("Index", "Missions", new { id = Html.DisplayFor(modelItem => item.MissionID) })">@Html.DisplayFor(modelItem => item.MissionName)</a></li>
      
    }
    </ul>
</div>